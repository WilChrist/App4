<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionEtudiant.AjoutEtudiant">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10" Padding="10">
                <Label Text="Image will show here"/>
                <Image x:Name="image"/>
                <Entry x:Name="nom" Placeholder="Nom"></Entry>
                <Entry x:Name="prenom" Placeholder="Prenom"></Entry>
                <Entry x:Name="cne" Placeholder="Cne"></Entry>
                <DatePicker x:Name="date" Format="dd/MM/yyyy" />
                <Entry x:Name="tel" Placeholder="Tel ex:(+212xxxxxxxxx)"></Entry>
                <Button x:Name="takePhoto" Text="Take Photo"></Button>
                <Button x:Name="pickPhoto" Text="Pick Photo"></Button>
                <Label Text="Save to Gallery"/>
                <Switch x:Name="saveToGallery" IsToggled="false" HorizontalOptions="Center"/>
                <Entry x:Name="gmail" Placeholder="Gmail ex:exemple@hotmail.com"></Entry>
                <Picker x:Name="picker" Title="Select a Filiere"/>
                <Label Text="Test" x:Name="FiliereSelectionnée"/>
                <Button Text="Save" Clicked="AjouterEtudiant"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>