<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.EtudiantPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,10,10,10" Orientation="Vertical" VerticalOptions="FillAndExpand">
                <Entry x:Name="nom" Placeholder="Nom"></Entry>
                <Entry x:Name="prenom" Placeholder="Prenom"></Entry>
                <Entry x:Name="cne" Placeholder="Cne" Keyboard="Numeric"></Entry>
                <Entry x:Name="tel" Placeholder="Tel ex:(+212xxxxxxxxx)" Keyboard="Telephone"></Entry>
                <Button x:Name="takePhoto" Text="Take Photo"></Button>
                <Button x:Name="pickPhoto" Text="Pick Photo" ></Button>
                <Label Text="Save to Gallery"/>
                <Switch x:Name="saveToGallery" IsToggled="false" HorizontalOptions="Center"/>
                <Label Text="Image will show here"/>
                <Image x:Name="image"/>
                <Entry x:Name="gmail" Placeholder="Gmail ex:exemple@hotmail.com" Keyboard="Email"></Entry>
                <DatePicker />

                <Button Text="Enregistrer" 
                    Clicked="Enregistrer_Clicked"/>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>