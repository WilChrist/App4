<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.ModifierFiliere">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifier une filière" Order="Primary"/>
        <ToolbarItem Text="Etudiant" Activated="EtudiantItem_Activeted" Order="Secondary"/>
        <ToolbarItem Text="Filière" Activated="FiliereItem_Activeted" Order="Secondary"/>
        <ToolbarItem Text="Statistique" Activated="StatistiqeItem_Activeted" Order="Secondary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout x:Name="addAnnimation" Spacing="20" Padding="20" VerticalOptions="Center">
            <Entry x:Name="id" TextColor="Black" Placeholder="ID filiere" IsEnabled="false"/>
            <Entry x:Name="nom" TextColor="Black" Placeholder="Nom Filiere"/>
            <Entry x:Name="resp" TextColor="Black" Placeholder="Responsable"/>
            <DatePicker x:Name="date" TextColor="Black" Format="dd/MM/yyyy" />

            <Button Text="enregistrer les modifications" BackgroundColor="#2196F3"
                    Clicked="Enregistrer_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>